// theme

html {
  height: 100%;
}

body {
  //	background: url(
<%= asset_path 'bg.png' %> );

  //  background: url(asset_path('bg.png', image));
  //	background-color: #333;

  height: 100%;
  margin: 0;
  background: linear-gradient(to bottom, #808080 0%, #303030 100%);
  background-repeat: no-repeat;
  background-attachment: fixed;

  color: white;
}

h1 {
  font-size: 10pt;
}

a {
  text-decoration: none;
  color: yellow;
  &:visited {
    color: #dd6;
  }
  &:hover {
    color: black;
    background-color: yellow;
  }
}

footer {
  margin-top: 20px;
  padding-top: 5px;
  color: #999;
  a {
    color: #555;
    &:hover {
      color: #222;
    }
  }
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 10px;
    }
  }
}

td, th {
  padding: 0px 7px
}

tr[data-link], tr > [data-link] {
  cursor: pointer;
  &:hover {
    color: white;
    background-color: #111;
  }
}

td[data-link] {
  cursor: pointer;
}