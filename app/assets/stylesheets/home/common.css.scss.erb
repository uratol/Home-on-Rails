body:before {
  content: "";
  display: block;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -10;
  background: linear-gradient(to bottom, #808080 0%, #303030 100%) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

html {
  height: 100%;
}

body {
  color: white;
}

h1 {
  font-size: 10pt;
}

a {
  text-decoration: none;
  color: yellow;
  &:visited {
    color: #dd6;
  }
  &:hover {
    color: black;
    background-color: yellow;
  }
}

footer {
  margin-top: 20px;
  padding-top: 5px;
  color: #999;
  a {
    color: #555;
    &:hover {
      color: #222;
    }
  }
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 10px;
    }
  }
}

td, th {
  padding: 0px 7px
}

tr[data-link], tr > [data-link] {
  cursor: pointer;
  &:hover {
    color: white;
    background-color: #111;
  }
}

td[data-link] {
  cursor: pointer;
}

#progress{
  position: absolute;
  left:0;
  top:0;
  height: 2px;
  background-color: #55aaff;
}

#flash_container{
  position: absolute;
  background-color: #2E2F30;
  border: 2px solid #ccc;
  border-radius: 5px;
  z-index: 1000;
  padding: 3px;
  display: none;
  width: auto;
  min-width: 100px;
  max-width: 700px;
  overflow: auto;

  .close{
    color: #777;
    font: 14px/100% arial, sans-serif;
    position: absolute;
    right: 5px;
    text-decoration: none;
    text-shadow: 0 1px 0 #fff;
    top: 5px;
  }

  #flash_messages{
    padding-right: 17px;
  }

}