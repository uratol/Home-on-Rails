// theme
body {
	background: url(<%= asset_path "bg.png" %>);

//  background: url(asset_path('bg.png', image)); 
	background-color: #333;
	color: white;
	};

h1{
  font-size: 10pt;
}

a {
	text-decoration: none;
	color: yellow;
	&:visited {
	    color: #dd6;
	  }
	&:hover {
	    color: black;
	    background-color: yellow;
	  }
}

footer {
  margin-top: 20px;
  padding-top: 5px;
  border-top: 1px solid #eaeaea;
  color: #999;
  a {
    color: #555;
    &:hover {
      color: #222;
    }
  }
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 10px;
    }
  }
}

td,th {padding: 0px 7px}
