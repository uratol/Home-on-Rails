<p id="notice">
	<%= notice %>
</p>

<p>
	<strong>Name:</strong>
	<%= @driver %>
</p>

<% if @driver.respond_to? :scan %>
<table>
	<tr>
		<th> Physical address </th>
		<th> Entity </th>
	</tr>
	<% @driver.scan.each do |e| %>
	<tr>
		<td> <%= e.address %> </td>
		<td> <%= link_to e.name, edit_entity_path(e) if e.id %> </td>
	</tr>
	<% end %>
</table>
<% end %>
